<%- include('partials/header', { page: 'leads' }) %>

<div class="p-6">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h2 class="text-2xl font-bold text-white">Saved Leads</h2>
      <p class="text-gray-400 mt-1">
        <span id="leadCount"><%= leads.length %></span> bookmarked businesses
      </p>
    </div>
  </div>

  <% if (leads.length === 0) { %>
    <!-- Empty state -->
    <div class="text-center py-20 bg-gray-800 rounded-lg">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-700 rounded-full mb-4">
        <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-300 mb-2">No saved leads yet</h3>
      <p class="text-gray-500 mb-4">Bookmark businesses from your search results to save them here.</p>
      <a href="/" class="inline-flex items-center gap-2 px-4 py-2 bg-accent hover:bg-accent-hover text-white rounded-lg transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        Find Leads
      </a>
    </div>
  <% } else { %>
    <!-- Leads table -->
    <div class="bg-gray-800 rounded-lg overflow-hidden">
      <table class="w-full">
        <thead class="bg-gray-700">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Company</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Phone</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Website</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Category</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Rating</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Saved</th>
          </tr>
        </thead>
        <tbody id="leadsTableBody" class="divide-y divide-gray-700">
          <% leads.forEach(lead => { %>
            <tr
              class="hover:bg-gray-700 cursor-pointer lead-row"
              data-key="<%= lead.key %>"
              data-title="<%= lead.title %>"
              data-phone="<%= lead.phone %>"
              data-website="<%= lead.website %>"
              data-email="<%= lead.email %>"
              data-category="<%= lead.category %>"
              data-address="<%= lead.address %>"
              data-city="<%= lead.city %>"
              data-state="<%= lead.state %>"
              data-rating="<%= lead.rating %>"
              data-review-count="<%= lead.reviewCount %>"
              data-url="<%= lead.url %>"
            >
              <td class="px-4 py-3">
                <div class="font-medium text-white"><%= lead.title %></div>
              </td>
              <td class="px-4 py-3 text-gray-300"><%= lead.phone || '-' %></td>
              <td class="px-4 py-3">
                <% if (lead.website) { %>
                  <span class="text-accent truncate block max-w-[200px]"><%= lead.website.replace(/^https?:\/\//, '').replace(/\/$/, '') %></span>
                <% } else { %>
                  <span class="text-gray-500">-</span>
                <% } %>
              </td>
              <td class="px-4 py-3 text-gray-300"><%= lead.category || '-' %></td>
              <td class="px-4 py-3">
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                  <span class="text-gray-300"><%= lead.rating || '0' %></span>
                </div>
              </td>
              <td class="px-4 py-3 text-gray-400 text-sm">
                <%= new Date(lead.savedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<!-- Detail Panel -->
<div id="detailPanel" class="detail-panel fixed right-0 top-0 h-full w-96 bg-gray-800 shadow-2xl z-50 overflow-y-auto">
  <div class="p-6">
    <button id="closePanel" class="absolute top-4 right-4 text-gray-400 hover:text-white">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Avatar -->
    <div class="flex items-center gap-4 mb-6">
      <div id="panelAvatar" class="w-16 h-16 bg-accent rounded-full flex items-center justify-center text-2xl font-bold text-white">
        A
      </div>
      <div>
        <h3 id="panelTitle" class="text-xl font-bold text-white">Company Name</h3>
        <p id="panelCategory" class="text-gray-400">Category</p>
      </div>
    </div>

    <!-- Rating -->
    <div id="panelRating" class="flex items-center gap-2 mb-6">
      <div class="flex text-yellow-400">
        <!-- Stars will be inserted here -->
      </div>
      <span class="text-gray-400">(<span id="panelReviewCount">0</span> reviews)</span>
    </div>

    <!-- Contact Info -->
    <div class="space-y-4 mb-6">
      <div id="panelPhoneRow" class="flex items-center gap-3">
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <a id="panelPhone" href="#" class="text-accent hover:underline">-</a>
      </div>

      <div id="panelEmailRow" class="flex items-center gap-3">
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span id="panelEmail" class="text-gray-300">-</span>
      </div>

      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-gray-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span id="panelAddress" class="text-gray-300">-</span>
      </div>
    </div>

    <!-- Action buttons -->
    <div class="space-y-3">
      <a id="panelWebsiteBtn" href="#" target="_blank" class="flex items-center justify-center gap-2 w-full px-4 py-2 bg-accent hover:bg-accent-hover text-white rounded-lg transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
        </svg>
        Visit Website
      </a>

      <a id="panelMapsBtn" href="#" target="_blank" class="flex items-center justify-center gap-2 w-full px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
        </svg>
        Google Maps
      </a>

      <button id="panelRemoveBtn" class="flex items-center justify-center gap-2 w-full px-4 py-2 bg-red-600/20 hover:bg-red-600/40 text-red-400 rounded-lg transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Remove from Leads
      </button>
    </div>
  </div>
</div>

<script>
  let currentLead = null;
  let currentRow = null;

  // Row click to open panel
  document.querySelectorAll('.lead-row').forEach(row => {
    row.addEventListener('click', function() {
      currentRow = this;
      currentLead = {
        key: this.dataset.key,
        title: this.dataset.title,
        phone: this.dataset.phone,
        website: this.dataset.website,
        email: this.dataset.email,
        category: this.dataset.category,
        address: this.dataset.address,
        city: this.dataset.city,
        state: this.dataset.state,
        rating: parseFloat(this.dataset.rating) || 0,
        reviewCount: parseInt(this.dataset.reviewCount) || 0,
        url: this.dataset.url
      };

      // Populate panel
      document.getElementById('panelAvatar').textContent = currentLead.title.charAt(0).toUpperCase();
      document.getElementById('panelTitle').textContent = currentLead.title;
      document.getElementById('panelCategory').textContent = currentLead.category || 'Business';

      // Rating stars
      const ratingDiv = document.getElementById('panelRating').querySelector('.flex');
      ratingDiv.innerHTML = '';
      for (let i = 1; i <= 5; i++) {
        const star = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
        star.setAttribute('class', 'w-5 h-5');
        star.setAttribute('fill', i <= currentLead.rating ? 'currentColor' : 'none');
        star.setAttribute('stroke', 'currentColor');
        star.setAttribute('viewBox', '0 0 24 24');
        star.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>';
        ratingDiv.appendChild(star);
      }
      document.getElementById('panelReviewCount').textContent = currentLead.reviewCount;

      // Phone
      const phoneEl = document.getElementById('panelPhone');
      if (currentLead.phone) {
        phoneEl.textContent = currentLead.phone;
        phoneEl.href = 'tel:' + currentLead.phone;
        document.getElementById('panelPhoneRow').style.display = 'flex';
      } else {
        document.getElementById('panelPhoneRow').style.display = 'none';
      }

      // Email
      const emailEl = document.getElementById('panelEmail');
      if (currentLead.email) {
        emailEl.textContent = currentLead.email;
        document.getElementById('panelEmailRow').style.display = 'flex';
      } else {
        document.getElementById('panelEmailRow').style.display = 'none';
      }

      // Address
      document.getElementById('panelAddress').textContent = currentLead.address || `${currentLead.city}, ${currentLead.state}`;

      // Website button
      const websiteBtn = document.getElementById('panelWebsiteBtn');
      if (currentLead.website) {
        websiteBtn.href = currentLead.website;
        websiteBtn.style.display = 'flex';
      } else {
        websiteBtn.style.display = 'none';
      }

      // Maps button
      const mapsBtn = document.getElementById('panelMapsBtn');
      if (currentLead.url) {
        mapsBtn.href = currentLead.url;
      } else {
        mapsBtn.href = `https://www.google.com/maps/search/${encodeURIComponent(currentLead.title + ' ' + currentLead.city + ' ' + currentLead.state)}`;
      }

      // Open panel
      document.getElementById('detailPanel').classList.add('open');
    });
  });

  // Close panel
  document.getElementById('closePanel').addEventListener('click', function() {
    document.getElementById('detailPanel').classList.remove('open');
  });

  // Remove lead
  document.getElementById('panelRemoveBtn').addEventListener('click', async function() {
    if (!currentLead) return;

    try {
      const response = await fetch('/leads/delete/' + encodeURIComponent(currentLead.key), {
        method: 'POST'
      });
      const data = await response.json();

      if (data.success) {
        // Remove row from table
        currentRow.remove();

        // Update count
        const countEl = document.getElementById('leadCount');
        const newCount = parseInt(countEl.textContent) - 1;
        countEl.textContent = newCount;

        // Close panel
        document.getElementById('detailPanel').classList.remove('open');

        // Reload if no leads left
        if (newCount === 0) {
          location.reload();
        }
      }
    } catch (e) {
      console.error('Failed to remove lead:', e);
    }
  });
</script>

