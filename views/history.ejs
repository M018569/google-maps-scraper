<%- include('partials/header', { page: 'history' }) %>

<div class="p-6">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h2 class="text-2xl font-bold text-white">Search History</h2>
      <p class="text-gray-400 mt-1">Your previous Google Maps searches</p>
    </div>
  </div>

  <% if (searches.length === 0) { %>
    <!-- Empty state -->
    <div class="text-center py-20 bg-gray-800 rounded-lg">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-700 rounded-full mb-4">
        <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-300 mb-2">No searches yet</h3>
      <p class="text-gray-500 mb-4">Your search history will appear here.</p>
      <a href="/" class="inline-flex items-center gap-2 px-4 py-2 bg-accent hover:bg-accent-hover text-white rounded-lg transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        Start Searching
      </a>
    </div>
  <% } else { %>
    <!-- History table -->
    <div class="bg-gray-800 rounded-lg overflow-hidden">
      <table class="w-full">
        <thead class="bg-gray-700">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Search Query</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Location</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Results</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Date</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-700">
          <% searches.forEach(search => { %>
            <tr class="hover:bg-gray-700">
              <td class="px-4 py-3">
                <span class="font-medium text-white"><%= search.query %></span>
              </td>
              <td class="px-4 py-3 text-gray-300"><%= search.location %></td>
              <td class="px-4 py-3">
                <span class="px-2 py-1 text-xs font-medium bg-accent/20 text-accent rounded-full">
                  <%= search.resultCount %> found
                </span>
              </td>
              <td class="px-4 py-3 text-gray-400 text-sm">
                <%= new Date(search.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
              </td>
              <td class="px-4 py-3">
                <div class="flex items-center gap-2">
                  <a href="/history/<%= encodeURIComponent(search.key) %>" class="px-3 py-1 text-sm bg-gray-600 hover:bg-gray-500 text-white rounded transition-colors">
                    View
                  </a>
                  <form action="/history/delete/<%= encodeURIComponent(search.key) %>" method="POST" class="inline" onsubmit="return confirm('Delete this search?')">
                    <button type="submit" class="px-3 py-1 text-sm bg-red-600/20 hover:bg-red-600/40 text-red-400 rounded transition-colors">
                      Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>
