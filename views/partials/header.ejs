<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lead Scraper - Google Maps</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            sidebar: '#1a1f1e',
            accent: '#4a7c59',
            'accent-hover': '#5a8c69',
          }
        }
      }
    }
  </script>
  <style>
    .detail-panel {
      transform: translateX(100%);
      transition: transform 0.3s ease-in-out;
    }
    .detail-panel.open {
      transform: translateX(0);
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    .animate-spin {
      animation: spin 1s linear infinite;
    }
  </style>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="fixed left-0 top-0 h-full w-64 bg-sidebar flex flex-col z-40">
      <div class="p-6 border-b border-gray-700">
        <h1 class="text-xl font-bold text-white flex items-center gap-2">
          <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Lead Scraper
        </h1>
      </div>

      <nav class="flex-1 p-4">
        <ul class="space-y-2">
          <li>
            <a href="/" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-700 transition-colors <%= typeof page !== 'undefined' && page === 'search' ? 'bg-accent text-white' : 'text-gray-300' %>">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              Search
            </a>
          </li>
          <li>
            <a href="/history" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-700 transition-colors <%= typeof page !== 'undefined' && page === 'history' ? 'bg-accent text-white' : 'text-gray-300' %>">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              History
            </a>
          </li>
          <li>
            <a href="/leads" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-700 transition-colors <%= typeof page !== 'undefined' && page === 'leads' ? 'bg-accent text-white' : 'text-gray-300' %>">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
              </svg>
              Leads
            </a>
          </li>
        </ul>
      </nav>

      <div class="p-4 border-t border-gray-700">
        <p class="text-xs text-gray-500 text-center">Powered by Apify</p>
      </div>
    </aside>

    <!-- Main content -->
    <main class="flex-1 ml-64">
